        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  
  <!-- Bullpup DMR -->
  
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_BullpupDMR</defName>
    <label>bullpup DMR bullet</label>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>16</damageAmountBase>
      <stoppingPower>1.5</stoppingPower>
      <speed>80</speed>
    </projectile>
    <graphicData>
      <texPath>Things/Projectile/Bullet_big</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
  </ThingDef>

  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>VWE_Gun_BullpupDMR</defName>
    <label>bullpup DMR</label>
    <description>A bullpup designated marksman rifle.\n\nWhilst it shares similarities with a standard bolt-action rifle, it trades off it's damage for firing two shots in quick succession. Due to lightweight material, it is quick to draw and fire.</description>
    <graphicData>
      <texPath>Things/WeaponRanged/BullpupDMR</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <drawSize>1.12</drawSize>
    </graphicData>
	<comps>
      <li> <compClass>CompOversizedWeapon.CompOversizedWeapon</compClass>
      </li>
    </comps>
    <soundInteract>Interact_Rifle</soundInteract>
    <statBases>
      <WorkToMake>45000</WorkToMake>
      <Mass>3.6</Mass>
      <AccuracyTouch>0.65</AccuracyTouch>
      <AccuracyShort>0.70</AccuracyShort>
      <AccuracyMedium>0.80</AccuracyMedium>
      <AccuracyLong>0.70</AccuracyLong>
      <RangedWeapon_Cooldown>2.9</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>90</Steel>
	  <Plasteel>40</Plasteel>
      <ComponentIndustrial>10</ComponentIndustrial>
    </costList>
    <recipeMaker>
	  <recipeUsers>
		<li>TableMachining</li>
	  </recipeUsers>
      <researchPrerequisite>VWE_DesignatedMarksmanRifle</researchPrerequisite>
      <skillRequirements>
        <Crafting>8</Crafting>
      </skillRequirements>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_BullpupDMR</defaultProjectile>
        <warmupTime>0.05</warmupTime>
